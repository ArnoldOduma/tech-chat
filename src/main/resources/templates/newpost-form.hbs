                <input class="form-control form-control-sm" type="text" id="content1" name="content1"
                          placeholder="Create a post" value="{{editPost.content}}" >
            </div>
            <button class="btn blue-gradient btn-block" type="submit">Post</button>
        </form>
    </section>

{{/partial}}

